{
    "manifest_version": 2,
    "name": "IDOL M@STER Million Live! Ranking Checker",
    "description": "ランキング情報をとってくるすごいやつだよ！",
    "version": "0.0.1",
    "icons": {
        "48": "img/icon48.png"
    },
    "browser_action": {
        "default_icon": "img/icon48.png",
        "default_title": "ランキングチェッカー",
        "default_popup": "src/popup.html"
    },
    "permissions": [
        "notifications",
        "alarms",
        "tabs"
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "background": {
        "scripts": [
            "src/background.js"
        ],
        "persistent": false
    }
}
